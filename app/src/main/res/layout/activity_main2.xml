<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.MainActivity2"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cordinaterlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:animateLayoutChanges="true"
            android:background="#fff">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="-50sp"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleGravity="top"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="true">

                <ImageView
                    android:id="@+id/recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="false"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="-35dp"
                    android:src="@drawable/hello2"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7" />


                <RelativeLayout
                    android:id="@+id/excecise_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/btn_back" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/btn_share" />

                    </RelativeLayout>


                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin">

                    <TextView
                        android:id="@+id/text_restName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="22dp"
                        android:text="7M ABS FOCUS"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                       />
                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_25"
                    android:layout_gravity="bottom">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_4">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/num_excecise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8"
                                android:text="12"
                                android:textColor="#ffff"
                                android:textSize="@dimen/dimen_10" />

                            <TextView
                                android:id="@+id/txt_excecise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="Excecise"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="bullet"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/num_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="7"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10" />

                            <TextView
                                android:id="@+id/txt_minute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="Minutes"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="bullet"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/num_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="42"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10" />

                            <TextView
                                android:id="@+id/txt_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="Calories"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="bullet"
                                android:textColor="#ffffff"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:text="Beginner"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8"
                    android:text="Detail"
                    android:textColor="#585858"
                    android:textAllCaps="false"
                    />
                <!--  android:textColor="#000"-->

                <TextView
                    android:id="@+id/txt_color"
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_4"
                    android:layout_below="@id/txt_detail"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5dp"
                    android:background="#37AE90" />

                <ImageView
                    android:id="@+id/txt_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/txt_color"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:background="#ADADAD" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_line"
                    android:layout_marginBottom="@dimen/dimen_52"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</RelativeLayout>